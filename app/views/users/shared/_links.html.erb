<div class='mt3'>
  <%- if controller_name != 'sessions' %>
    <%= link_to t('welcome.sign_in'), new_session_path(resource_name), class: '' %><br />
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('welcome.sign_up'), new_registration_path(resource_name), class: '' %><br />
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t('welcome.forgot_my_password'), new_password_path(resource_name), class: '' %><br />
  <% end -%>
</div>
